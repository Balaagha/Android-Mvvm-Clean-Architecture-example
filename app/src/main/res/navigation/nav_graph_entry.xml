<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_entry"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.androidmvvmcleanarchitectureexample.ui.entryflow.view.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_onBoardingFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/splashFragment"
            app:destination="@id/onBoardingFragment" />
    </fragment>

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.example.androidmvvmcleanarchitectureexample.ui.entryflow.view.onboarding.OnBoardingFragment"
        android:label="fragment_on_boarding"
        tools:layout="@layout/fragment_on_boarding" >
        <action
            android:id="@+id/action_onBoardingFragment_to_loginFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/onBoardingFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.androidmvvmcleanarchitectureexample.ui.entryflow.view.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordMehtodSelectorFragment"
            app:destination="@id/forgotPasswordMehtodSelectorFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.androidmvvmcleanarchitectureexample.ui.entryflow.view.register.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register" >
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordMehtodSelectorFragment"
        android:name="com.example.androidmvvmcleanarchitectureexample.ui.entryflow.view.forgotpassword.ForgotPasswordMehtodSelectorFragment"
        android:label="ForgotPasswordMehtodSelectorFragment" />
    <!--    <fragment-->
    <!--        android:id="@+id/otpFragment"-->
    <!--        android:name="com.example.beso.ui.splash.otp.OtpFragment"-->
    <!--        android:label="OtpFragment" />-->

</navigation>