<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/background_splash"
        tools:context="ui.entryflow.view.splash.SplashFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:src="@drawable/ic_beso_logo" />

            <Button
                android:id="@+id/signWithAsan"
                style="@style/Controls.Buttons.Default"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:drawableStart="@drawable/ic_finger_print"
                android:drawablePadding="15dp"
                android:text="Login with Asan "
                android:textAlignment="viewStart"
                android:layout_marginBottom="24dp" />
            <Button
                android:id="@+id/signWithId"
                style="@style/Controls.Buttons.Default"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="15dp"
                android:text="Login with Id "
                android:textAlignment="viewStart" />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


